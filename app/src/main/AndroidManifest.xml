<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobimation.storymaker" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextRecorder" />
        <activity android:name=".VoiceRecorder" />
        <activity android:name=".VideoRecorder" />
        <activity
            android:name=".StoryEditorActivity"
            android:label="@string/title_activity_timeline_editor" >
        </activity>
        <activity
            android:name=".Player"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_player"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.NoBackground" >
        </activity>
        <activity
            android:name=".PlayCheckActivity"
            android:label="@string/title_activity_play_check" >
        </activity>
        <activity
            android:name=".AudioPlayActivity"
            android:label="@string/title_activity_audio_play" >
        </activity>
        <activity
            android:name=".PhotoRecorder"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_camera"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".test.VideoclipEditSliderTester"
            android:label="@string/title_activity_videoclip_edit_slider_tester" >
        </activity>
        <activity
            android:name="com.yahoo.mobile.client.android.util.RangeSeekBarDemoActivity"
            android:label="@string/title_activity_range_seek_bar_demo"
            android:theme="@style/Theme.AppCompat.DialogWhenLarge" >
        </activity>
    </application>

</manifest>
